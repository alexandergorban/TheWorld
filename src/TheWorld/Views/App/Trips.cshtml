@*@model IEnumerable<TheWorld.Models.Trip>*@
@{
    ViewBag.Title = "Home Page";
    Layout = "_Layout";
}
@section Scripts {
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/lib/angular-route/angular-route.min.js"></script>
    <script src="~/js/simpleControls.js"></script>
    <script src="~/js/app-trips.js"></script>
    <script src="~/js/tripsController.js"></script>
}

<div class="row" ng-app="app-trips">
    <div ng-view></div>
    <div class="col-md-6">
        <h3>The World</h3>
        <p>Website building with ASP.NET Core, MVC 6, EF Core, and Angular.</p>
        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control"/>
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control"/>
            </div>
            <div>
                <input type="submit" value="Add" class="btn btn-success"/>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h2>The Map</h2>
        <ul>
            @foreach (var item in Model)
            {
                <li>@item.Name : @item.DateCreated.ToString("d")</li>
            }
        </ul>

    </div>
</div>